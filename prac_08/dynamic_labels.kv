<RootWidget>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: 40
        TextInput:
            id: input_text
            hint_text: "Enter text"
        Button:
            text: "Add Label"
            on_press: app.add_label()

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            id: labels_box
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 5
